#include<iostream>
using namespace std;
int main(){
    cout<<"enter size of matrix : ";
    int n;
    cin>>n;
    int a = n*(n+1)/2;
    int arr[a];
    for(int i=0;i<a;i++){
        cout<<"enter "<<i<<" th element";
        cin>>arr[i];
    }
    int c=0;
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            if(i<=j)  { 
                cout<<arr[c]<<" ";
                c++;
            }
              else cout<<"0"<<" ";
        }
        cout<<endl;
    }
   
}
