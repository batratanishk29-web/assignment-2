
#include <iostream>
using namespace std;
int main() {
    cout<<"enter size of diagonal marix : ";
    int n;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++){
        cout<<"enter diagonal element "<<i+1<<" : ";
        cin>>arr[i];
    }
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            if(i==j){
                cout<<arr[i]<<" ";
            }
            else cout<<"0"<<" ";
        }
        cout<<endl;
    }

     return 0;
    
        }
